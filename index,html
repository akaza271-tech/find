            justify-content: center;
            min-height: 100vh;
        }

        .game-header {
            margin-bottom: 2rem;
            text-align: center;
        }

        .stats {
            display: flex;
            gap: 20px;
            font-weight: 600;
            font-size: 1.1rem;
            color: var(--primary);
        }

        .grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 12px;
            max-width: 400px;
            width: 90%;
        }

        .card {
            aspect-ratio: 1/1;
            background-color: var(--card-bg);
